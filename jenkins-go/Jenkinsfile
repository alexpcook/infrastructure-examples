pipeline {
    agent { docker { image 'golang' } }
    stages {
        stage('build') {
            steps {
                sh 'go version'
                sh 'mkdir gocache'
                sh 'go env -w GOCACHE=/gocache'
            }
        }
        stage('test') {
            steps {
                sh 'cd jenkins-go && go test -v'
            }
        }
    }
}
