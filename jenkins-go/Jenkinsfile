pipeline {
	agent any
	stages {
		stage("build") {
			steps {
				dir("jenkins-go") {
					sh "go version"
					sh "go fmt ./..."
					sh "go install"
					sh "\$5(go env GOPATH)/bin/jenkins-go"
				}
			}
		}
		stage("test") {
			steps {
				dir("jenkins-go") {
					sh "go test -v ./..."
				}
			}
		}
	}
}
